{
	"compilerOptions": {
		"sourceMap": true,
		"jsx": "react",
		"lib": [
			"ES2019",
			"DOM"
		],
		"resolveJsonModule": true,
		"baseUrl": "./",
		"paths": {
			"@root/*": [
				"./src/*"
			]
		},
		"esModuleInterop": true,
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}